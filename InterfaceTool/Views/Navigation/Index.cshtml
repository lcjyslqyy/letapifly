        function iFrameHeight() {
            //注意此方法在google浏览器上无法在调试环境使用,发布到服务器后才能控制iframe.有更好的方法希望给点建议,毕竟我不是专业的前端
            var ifm = document.getElementById("iframepage");
            var subWeb = document.frames ? document.frames["iframepage"].document : ifm.contentDocument;
            if (ifm != null && subWeb != null) {
                ifm.height = subWeb.body.scrollHeight;
            }
        }
        $(function () {
            InitMenu();          
        })
        function InitMenu() {
            $.ajax({
                url: '/Navigation/Get_Menu/',
                cache: false,
                async: false,
                type: "POST",
                success: function (json) {
                    if (json) {
                        $("#mymenu_itemlist").empty();
                        for (var i = 0; i < json.length; i++) {
                            $("#mymenu_itemlist").append('<li class="nav-item start"><a href="' + json[i].controlurl + '" target="iframepage" class="nav-link "><i class="' + json[i].icon+'"></i><span class="title">' + json[i].navigationname + '</span></a></li>')
                        }
                    }
                }
            });
        }
